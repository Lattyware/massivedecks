    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^2.3.0",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^7.0.0",
    "postcss-preset-env": "^7.0.1",
    "prettier": "2.6.2",

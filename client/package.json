    "compression-webpack-plugin": "^10.0.0",
    "css-hot-loader": "^1.4.4",
    "css-loader": "^6.3.0",
    "cssnano": "^5.0.5",
    "elm": "^0.19.1-3",
    "elm-analyse": "^0.16.5",
